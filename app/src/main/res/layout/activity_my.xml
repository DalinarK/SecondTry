<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyActivity">

    <!--<TextView android:text="@string/hello_world" android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    <EditText android:id="@+id/vacation_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/vacation_name"
        />

    <EditText android:id="@+id/vacation_spot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/vacation_spot"
        />

    <EditText android:id="@+id/number_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/number_days"
        android:inputType="number"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:id="@+id/costCheap"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$$"
            android:id="@+id/costMed"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$$$"
            android:id="@+id/costExpensive"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:onClick="sendMessage" />

</LinearLayout>